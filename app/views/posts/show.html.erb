<div id="post_show_content" class="skinny_wrapper  wrapper_padding">
          <header>
               <p class="date"> <%= @post.created_at.strftime('%A,%B,%d') %></p>
               <h2><%= @post.title %></h2>
               <hr>
          </header>
     <div id="content">
         <%= @post.content %>
            <hr>
            <div id="share_box">
            <p> Share <%= @post.title %></p>
       <!--facebokk -->
            <a onclick="javascript:window.open(' http://www.facebook.com/sharer.php?u=<%= url_for([@post,{
            only_path: false}]) %>', '_blank', 'width=800, height=500,top=200, left=300');void(0);">
              <i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-linkedin-square" aria-hidden="true"></i></a>
            </div>
            <hr>
     </div>
</div>
<%= link_to "Edit", edit_post_path(@post) %>
